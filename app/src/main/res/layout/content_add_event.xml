<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.delia_grimes.charterconnect.AddEvent"
    tools:showIn="@layout/activity_add_event">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/add_event_page_title"
            android:id="@+id/addEvent"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventName"
            android:layout_gravity="center_horizontal"
            android:hint="@string/add_event_page_event_name_hint"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hostSchool"
            android:layout_gravity="center_horizontal"
            android:hint="@string/add_event_page_host_school_hint"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/location"
            android:layout_gravity="center_horizontal"
            android:hint="@string/add_event_page_event_location_hint"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/eventDate"
            android:layout_gravity="center_horizontal"
            android:hint="@string/add_event_page_event_date_hint"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/eventTime"
            android:layout_gravity="center_horizontal"
            android:hint="@string/add_event_page_event_time_hint"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/eventCost"
            android:layout_gravity="center_horizontal"
            android:hint="@string/add_event_page_event_cost_hint"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/eventGradeLevels"
            android:layout_gravity="center_horizontal"
            android:hint="@string/grade_levels"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/spotsAvailable"
            android:layout_gravity="center_horizontal"
            android:hint="@string/add_event_page_spaces_available_hint"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/rsvpEmail"
            android:layout_gravity="center_horizontal"
            android:hint="@string/add_event_page_rsvp_email_hint" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/rsvpPhone"
            android:layout_gravity="center_horizontal"
            android:hint="@string/add_event_page_rsvp_phone_number_hint"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="@string/save"
            android:id="@+id/eventsSaveButton"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_green_light"
            android:layout_marginTop="10dp" />


    </LinearLayout>
</RelativeLayout>
